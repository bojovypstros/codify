{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "target": "ES2020",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "./src/**/*.test.ts"
  ]
}
